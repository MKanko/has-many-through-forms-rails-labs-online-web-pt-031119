<h1><%= @post.title %></h1>

<h2>Categories:</h2>
  <ul>    
    <% @post.categories.all.each do |cat| %>
        <li><%= cat.name %></li>
    <% end %>
</ul>

<h2>Content:</h2>
  <p><%= @post.content %></p>

<h2>Comments:</h2>
  <ul>
    <% @post.comments.all.distinct.each do |com| %> 
        <li><%= link_to com.user.username, user_path(com.user) %> says: <%= com.content %></li> 
    <% end %>
  </ul>
  
<h2>New Comment:</h2>

<%= form_for @post.comments.build do |f| %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.collection_select :user_id, User.all, :id, :username %>
    <%= f.hidden_field :post_id %> 

    <%= f.fields_for :user, User.new do |users_fields| %> 
        <%= users_fields.text_field :username, id: "comment_user_attributes_username" %>
    <% end %>

    <%= f.submit %> 
<% end %> 








  


