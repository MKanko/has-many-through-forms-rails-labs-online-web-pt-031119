<h1><%= @post.title %></h1>

<h2>Categories:</h2>
  <ul>    
    <% @post.categories.all.each do |cat| %>
        <li><%= cat.name %></li>
    <% end %>
</ul>

<h2>Content:</h2>
  <p><%= @post.content %></p>

<h2>Comments:</h2>
  <ul>
    <% @post.comments.all.distinct.each do |com| %>
        <li><%= com.user.username %> says: <%= com.content %></li> 
    <%end %>
  </ul>
  
<h2>New Comment:</h2>

<%= form_for @post.comments.build do |f| %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.collection_select :user_id, User.all, :id, :username %>
    <%= f.hidden_field :post_id %> 

   

    <%= f.submit %> 
<% end %> 








  


